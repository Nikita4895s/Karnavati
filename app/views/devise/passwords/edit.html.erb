<div class="offset-3">
  <p class="h4 col-md-6 mt-5">Change your password</p>
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <%= f.hidden_field :reset_password_token %>
    <div class="form-group col-md-6">
      <label for="exampleInputEmail1">New Password</label>
      <%= f.password_field :password, autofocus: true, autocomplete: "new-password", id: 'exampleInputEmail1', placeholder: 'Enter password', class: 'form-control' %>
    </div>
    <div class="form-group col-md-6">
      <label for="exampleInputPassword1">Password</label>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control', id: 'exampleInputPassword1', placeholder: 'Enter confirm password' %>
    </div>
    <div class="form-group col-md-6">
      <%= f.submit "Submit", class: 'btn btn-primary submit_btn' %>
    </div>
  <% end %>
</div>
