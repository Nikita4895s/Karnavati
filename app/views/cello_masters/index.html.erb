<div class="container-fluid">
  <%= render partial: 'upload_csv_form' %>
  <div class="row">
    <div class="col-sm-3 main">
      <%= search_form_for @q, remote: true do |f| %>
        <div class="my-3">
          <div class='row'>
            <h3 style="float: left; margin-left: 10px;">Filter</h3>
            <%= f.submit 'Search', class: 'btn btn-outline-danger mx-2 my-2 my-sm-0', style: 'float: right; right:0; position: absolute;' %>
          </div>
          <div class="row mt-3">
            <div class="col-md-4"><b>Company:</b></div>
            <div class="col-md-8">
              <%= f.select :company_name_in, CelloMaster.all.pluck(:company_name).uniq, {include_blank: "Select Company"}, { multiple: true, class: 'company_name_select' }  %>
              <%#= f.search_field :company_name_i_cont, class: 'd-none'  %>
            </div>
          </div>
          <div class="row mt-3">
            <div class="col-md-4"><b>Division:</b></div>
            <div class="col-md-8" id='divison_box'>
              <%= f.select :divison_in, CelloMaster.all.pluck(:divison).uniq, {include_blank: "Select Division"}, { multiple: true, class: 'divison_select' }  %>
            </div>
          </div>
          <div class="row mt-3">
            <div class="col-md-4"><b>Category:</b></div>
            <div class="col-md-8" id='category_box'>
              <%= f.select :category_in, CelloMaster.all.pluck(:category).uniq, {include_blank: "Select Category"}, { multiple: true, class: 'category_select' }  %>
            </div>
          </div>
          <div class="row mt-3">
            <div class="col-md-4"><b>Product:</b></div>
            <div class="col-md-8" id='product_box'>
              <%= f.select :product_name_in, CelloMaster.all.pluck(:product_name).uniq, {include_blank: "Select Product"}, { multiple: true, class: 'product_select' }  %>
            </div>
          </div>
          <div class="row mt-3">
            <div class="col-md-4"><b>Capacity:</b></div>
            <div class="col-md-8" id='capacity_box'>
              <%= f.select :capacity_in, CelloMaster.all.pluck(:capacity).uniq, { include_blank: "Select Capacity" }, { multiple: true, class: 'capacity_select' }  %>
            </div>
          </div>
          <div class="row mt-3">
            <div class="col-md-4">
              <label for="amount"><b>MRP:</b></label>
            </div>
            <div class="col-md-8">
              <%= f.search_field :mrp_gteq, class: 'amountBox' %> To
              <%= f.search_field :mrp_lteq, class: 'amountBox' %>
            </div>
          </div>
          <div class="row">
            <div id="mrp_slider" class="mt-2" style="width: 95%; margin-left: 15px;"></div>
          </div>
          <div class="row mt-3">
            <div class="col-md-4">
              <label for="amount"><b>DRP:</b></label>
            </div>
            <div class="col-md-8">
              <%= f.search_field :drp_gteq, class: 'amountBox' %> To
              <%= f.search_field :drp_lteq, class: 'amountBox' %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
    <div class='col-sm-9'>
      <div class='row mt-3' id='cello_master_list'>
        <% @cello_masters.each do |cello_master| %>
          <%= render partial: 'cello_master_row', locals: {cello_master: cello_master}%>
        <% end %>
      </div>
    </div>
  </div>
</div>
