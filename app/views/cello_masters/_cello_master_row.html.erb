<div class="col-sm-3">
  <div class="card mb-4 shadow-sm">
    <div class="card-header main_1">
      <label class="container">
        <div>
          <h6 class="ml-2 mrp"><%= cello_master.product_name.titleize %></h6>
        </div>
        <%= check_box_tag :cello_master_id, cello_master.id, false, class: 'cello_master_id' %>
        <span class="checkmark"></span>
      </label>
    </div>
    <div class="card-body">
      <%= image_tag "http://drive.google.com/uc?export=view&id=#{cello_master.link_url&.split('=')&.last}", class: 'img-thumbnail product_img'%>
      <div class="mt-3">
        <h5 class="mrp">&#8377;<%= cello_master.mrp %></h5>
        <button type="button" class="btn btn-sm ml-3 btn-outline-primary">Show More</button>
      </div>
    </div>
  </div>
</div>


